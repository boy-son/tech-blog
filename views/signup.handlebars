<div class="jumbotron">
            <h3 class="text-center text-primary">Registration</h3>
            <br>
            {{#if errors}}
                {{#each errors}}
                    <div class="alert alert-danger alert-dismissible fade show">
                        <strong>{{msg}}</strong>
                        <button class="close" data-dismiss="alert"><span>&times;</span></button>
                    </div>
                {{/each}}
               
            {{/if}}
            
            <form method="post" class="form signUp" id="signUp">
                <div class="form-group">
                    <label for="username">Username <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="username" name="username" placeholder="Enter a Username" value="{{username}}">
                </div>
                <div class="form-group">
                    <label for="password">Password <span class="text-danger">*</span></label>
                    <input type="password" class="form-control" name="password" id="password" placeholder="Enter Your Password"value="{{password}}">
                </div>
                <div class="form-group">
                    <input type="submit" value="signUp" class="btn btn-info btn-block">
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-8">
                            Already created an account? Login <a href="/login">here</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
<script src="../public/js/signup.js"></script>